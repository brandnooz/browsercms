
.sidebar-nav {
  padding: 0;
  background-color: #fff;
  -webkit-border-radius: 6px;
     -moz-border-radius: 6px;
          border-radius: 6px;
  -webkit-box-shadow: 0 1px 4px rgba(0,0,0,.065);
     -moz-box-shadow: 0 1px 4px rgba(0,0,0,.065);
          box-shadow: 0 1px 4px rgba(0,0,0,.065);
}

.sidebar-nav .sb-item a {
  display: block;
  margin: 0 0 -1px;
  padding: 8px 14px;
  border: 1px solid #e5e5e5;
}

.sidebar-nav .accordion-body {
  border-left: 1px solid #e5e5e5; 
  border-right: 1px solid #e5e5e5; 
}

.sidebar-nav .sb-item:first-child a {
  -webkit-border-radius: 6px 6px 0 0;
     -moz-border-radius: 6px 6px 0 0;
          border-radius: 6px 6px 0 0;
}
.sidebar-nav .sb-item:last-child a {
  border-bottom: 1px solid #e5e5e5;
}
.sidebar-nav .accordion-inner {
  background-color: #f5f5f5;
  border-top: 1px solid #cccccc;
  box-shadow: inset 0px 2px 3px 0px #e5e5e5;
}
/* Chevrons */
.sidebar-nav .sb-item .icon-chevron-right {
  float: right;
  margin-top: 2px;
  margin-right: -6px;
  opacity: .25;
}
.sidebar-nav .sb-item:hover {
  background-color: #eeeeee;}
.sidebar-nav .sb-item:hover a {
  text-decoration: none;
}

/* Custom form */
#cms_form {
  padding: 20px;
}

.content_type.on a, .content_type.on:hover a {
  color: #ffffff;
  text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.2);
  background-color: #0088cc;}