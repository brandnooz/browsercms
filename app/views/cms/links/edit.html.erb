<% page_title "Edit '#{@link.name}' Link" %>
<%= content_for :functions do %>
  <h1><%= @page_title %></h1>
  <div class="btn-toolbar">
    <%= icon_link_to("List All", cms.sitemap_path, 'list', :class => "btn") %>
  </div>
<% end %>
<%= form_for(@link) do |f| %>
  <%= render :partial => 'form', :locals => {:f => f} %>
  <div class="buttons">
    <%= publish_button "link" %>
    <%= lt_button_wrapper(f.submit("Save", :class => "submit")) %>
  </div>
<% end %>
