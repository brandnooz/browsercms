<%= able_to? :publish_content do -%>
  <%= icon_link_to 'Publish', "#", 'ok',
    :class => "btn http_put button disabled", 
    :id => "publish_button" %>
<% end -%>

<%= link_to "View", "#", 
  :id => "view_button", 
  :class => "btn disabled#{ ' btn-primary' if action_name == 'show'}" %>
  
<%= icon_link_to "Edit", "#", 'edit',
  :id => "edit_button", 
  :class => "btn disabled#{ ' btn-primary' if action_name == 'edit'}" %>

<%= icon_link_to "Add", cms_new_path_for(content_type), 'plus',
  :id => "add_button", 
  :class => "btn#{ ' btn-primary' if action_name == 'new'}" %>
  
<%= icon_link_to "List Versions", "#", 'list',
  :id => "revisions_button", 
  :class => "btn #{ action_name == 'revisions' ? ' btn-primary' : ' disabled'}" %>

<%= delete_button :title=>true %>
