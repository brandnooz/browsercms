#sitemap {
  width: 100%;
  border-collapse: collapse;
  color: #5B5B5B;
}

.section {
  /*-moz-border-radius: 3px;
  border-radius: 3px;  */
  border: 1px solid #DDDDDD;}
.section tr td {
  padding: 3px 4px;
}  
.page tr td, .link tr td {
  padding: 3px 4px;
}

.action-link {
  height: 24px;
}
.action-link div {
  float: right; width: 30px;
  padding-top: 6px;
}

#sitemap ul {
  list-style: none;
}

#sitemap ul td.section {
  font-weight: bold;
}

/* Root and Rootlets */
#sitemap ul.rootlet, #sitemap ul.root {
  margin: 0 5px;
}

/* Root Node */
#sitemap ul.root {
padding-top: 4px;
}

#sitemap ul.root .node div {
padding-left: 14px;
padding-top: 4px;
}

#sitemap ul.root td.node img{
padding-left: 23px;
margin: -5px 0 -7px 0;
}

/* Rootlets */
#sitemap ul.rootlet {
padding-top: 12px;
}


#sitemap ul.rootlet ul ul li {
padding: 0 0 0 23px;
}

#sitemap ul.rootlet ul td.drop-after, #sitemap ul.rootlet ul ul table.section td.drop-after {
background-color: red;
}

#sitemap ul.rootlet ul table.section td.drop-after {
background-color: green;
}

#sitemap ul.section_node.open li {
  border: 1px solid #CC;
}

/* Table */
#sitemap table.hover {
  background-color: #D0D0D0;
  cursor: pointer;
}

#sitemap table.selected {
  background-color: #CADCF4;
}

#sitemap td.drop-over {
  background-color: #99c;
} 

#sitemap td div.icon_node {
  display: inline;
}

#sitemap td.drop-before, #sitemap td.drop-after {
  height: 5px;
  margin: 0;
  padding: 0;
}

#sitemap tr.section_node { 
vertical-align: middle;
}

#sitemap .sitemap_hidden {
  width: 35px;}
#sitemap .sitemap_access {
  width: 35px;}
#sitemap .sitemap_published_status {
  width: 72px;}
#sitemap ul.rootlet .sitemap_published_status div div{
float: left;
position: relative;
margin: 3px 0 0 6px;
}


